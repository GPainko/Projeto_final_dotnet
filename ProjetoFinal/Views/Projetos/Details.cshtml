@model MVC.Models.Projeto

@{
    ViewData["Title"] = "Detalhes do Projeto";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded-2xl">

                <!-- Cabeçalho -->
                <div class="card-header bg-info text-white d-flex align-items-center">
                    <i class="bi bi-info-circle-fill fs-4 me-2"></i>
                    <h2 class="mb-0">Detalhes do Projeto</h2>
                </div>

                <div class="card-body">
                    <!-- Dados do Projeto -->
                    <dl class="row mb-4">
                        <dt class="col-sm-3">Nome</dt>
                        <dd class="col-sm-9">@Model.Nome</dd>

                        <dt class="col-sm-3">Cliente</dt>
                        <dd class="col-sm-9">@Model.Cliente</dd>

                        <dt class="col-sm-3">Data Início</dt>
                        <dd class="col-sm-9">
                            @Model.DataInicio.ToString("dd/MM/yyyy")
                        </dd>

                        <dt class="col-sm-3">Data Término</dt>
                        <dd class="col-sm-9">
                            @(Model.DataFim.HasValue
                                                        ? Model.DataFim.Value.ToString("dd/MM/yyyy")
                                                        : "—")
                        </dd>
                    </dl>

                    <!-- Ações -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model.ProjetoId" class="btn btn-primary">
                            <i class="bi bi-pencil-fill me-1"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
