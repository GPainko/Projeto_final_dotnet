@model IEnumerable<MVC.Models.Projeto>

@{
    ViewData["Title"] = "Projetos";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Meus Projetos</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg me-1"></i> Novo Projeto
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="card h-100 shadow-sm rounded-2xl">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <i class="bi bi-folder-fill me-1 text-secondary"></i>
                            @item.Nome
                        </h5>
                        <p class="card-text mb-2"><strong>Cliente:</strong> @item.Cliente</p>
                        <p class="card-text mb-1">
                            <i class="bi bi-calendar-event me-1"></i>
                            <small>Início: @item.DataInicio.ToString("dd/MM/yyyy")</small>
                        </p>
                        <p class="card-text mb-3">
                            <i class="bi bi-calendar2-event me-1"></i>
                            <small>
                                Término: @(item.DataFim.HasValue
                                                            ? item.DataFim.Value.ToString("dd/MM/yyyy")
                                                        : "—")
                        </small>
                    </p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.ProjetoId"
                               class="btn btn-sm btn-outline-info" title="Detalhes">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.ProjetoId"
                               class="btn btn-sm btn-outline-primary" title="Editar">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ProjetoId"
                               class="btn btn-sm btn-outline-danger" title="Excluir">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
                }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-5">
            <i class="bi bi-info-circle-fill me-2"></i> Nenhum projeto cadastrado ainda.
        </div>
    }
</div>
