@model MVC.Models.Projeto

@{
    ViewData["Title"] = "Editar Projeto";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded-2xl">

                <!-- Cabeçalho -->
                <div class="card-header bg-warning text-white d-flex align-items-center">
                    <i class="bi bi-pencil-fill fs-4 me-2"></i>
                    <h2 class="mb-0">Editar Projeto</h2>
                </div>

                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="ProjetoId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome do Projeto</label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cliente" class="form-label">Cliente</label>
                            <input asp-for="Cliente" class="form-control" placeholder="Digite o nome do cliente" />
                            <span asp-validation-for="Cliente" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DataInicio" class="form-label">Data Início</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                    <input asp-for="DataInicio" type="date" class="form-control" />
                                </div>
                                <span asp-validation-for="DataInicio" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DataFim" class="form-label">Data Término</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                    <input asp-for="DataFim" type="date" class="form-control" />
                                </div>
                                <span asp-validation-for="DataFim" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="bi bi-save-fill me-1"></i> Salvar
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
