@model MVC.Models.Projeto

@{
    ViewData["Title"] = "Criar Projeto";
}

<!-- Container centralizado -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded-2xl">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Criar Projeto</h2>
                </div>
                <div class="card-body">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs mb-4" id="projectTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab">
                                Dados Gerais
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="dates-tab" data-bs-toggle="tab" data-bs-target="#dates" type="button" role="tab">
                                Datas
                            </button>
                        </li>
                    </ul>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="tab-content" id="projectTabContent">
                            <!-- Aba Dados Gerais -->
                            <div class="tab-pane fade show active" id="info" role="tabpanel">
                                <div class="mb-3">
                                    <label asp-for="Nome" class="form-label">Nome do Projeto</label>
                                    <input asp-for="Nome" class="form-control" placeholder="Ex: Sistema INSS" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Cliente" class="form-label">Cliente</label>
                                    <input asp-for="Cliente" class="form-control" placeholder="Ex: Ministério da Economia" />
                                    <span asp-validation-for="Cliente" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Aba Datas -->
                            <div class="tab-pane fade" id="dates" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DataInicio" class="form-label">Data Início</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                            <input asp-for="DataInicio" type="date" class="form-control" />
                                        </div>
                                        <span asp-validation-for="DataInicio" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DataFim" class="form-label">Data Término</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                            <input asp-for="DataFim" type="date" class="form-control" />
                                        </div>
                                        <span asp-validation-for="DataFim" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Salvar
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
